<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h4 id="myModalLabel">General Settings: <%=@account_group.name%></h4>
</div>

<%=form_for @account_group do |f|%>
<div class="modal-body">
    <div class="row-fluid">
      <div class="span6">
        Group Name:
        <%=f.text_field :name %>
      </div>
      <div class="span6">
        Agency:
        <%=collection_select :account_group, :agency_id, Agency.all, :id, :name, include_blank: true %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        Conversion Type:
        <%=f.select :conversion_type, AccountGroup::TYPES %>
      </div>
      <div class="span6">
        Separate Reports By:
        <%=f.select :separator, [["None",nil],["Campaign","campaign"]]%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        Linked Google Accounts:
        <%= f.select :google_account_ids, Account.for_group_select(@account_group, "Google"), {}, multiple: true, include_blank: false, size: 12 %>
      </div>
      <div class="span6">
        Linked Bing Accounts:
        <%= f.select :bing_account_ids, Account.for_group_select(@account_group, "Bing"), {}, multiple: true, include_blank: false, size: 12 %>
      </div>
    </div>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  <button class="btn btn-primary">Save changes</button>
</div>
</form>
<%end%>
